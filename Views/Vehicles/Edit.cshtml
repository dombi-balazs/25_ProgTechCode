@model JarmuMvcApp.Models.Vehicle

@{
    ViewData["Title"] = "Szerkesztés";
}

<div style="display: flex; justify-content: center;">
    <fluent-card style="width: 100%; max-width: 500px; margin-top: 20px;">
        
        <h2 style="margin-bottom: 20px;">Jármű szerkesztése</h2>

        <form method="post" action="/Vehicles/Edit/@Model.Id">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div style="display: flex; flex-direction: column; gap: 15px;">
                
                <fluent-text-field name="LicensePlate" value="@Model.LicensePlate" style="width: 100%;">
                    Rendszám
                </fluent-text-field>

                <fluent-text-field name="Owner" value="@Model.Owner" style="width: 100%;">
                    Tulajdonos
                </fluent-text-field>

                <fluent-text-field name="Name" value="@Model.Name" style="width: 100%;">
                    Márka / Név
                </fluent-text-field>

                <fluent-text-field name="Type" value="@Model.Type" style="width: 100%;">
                    Típus
                </fluent-text-field>

            </div>

            <div style="margin-top: 25px; display: flex; justify-content: flex-end; gap: 10px;">
                <fluent-button appearance="neutral" onclick="window.location.href='/Vehicles'">
                    Mégse
                </fluent-button>
                
                <fluent-button appearance="accent" type="submit">
                    Mentés
                </fluent-button>
            </div>

        </form>
    </fluent-card>
</div>