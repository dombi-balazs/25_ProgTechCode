@model JarmuMvcApp.Models.Vehicle

<h1>Jármű szerkesztése</h1>

<form method="post" action="/Vehicles/Edit/@Model.Id">

    <!-- Id mező -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <div style="margin-bottom:10px;">
        <label for="LicensePlate">Rendszám</label><br />
        <input type="text" id="LicensePlate" name="LicensePlate" value="@Model.LicensePlate" required style="width:300px;" />
    </div>

    <div style="margin-bottom:10px;">
        <label for="Owner">Tulaj</label><br />
        <input type="text" id="Owner" name="Owner" value="@Model.Owner" style="width:300px;" />
    </div>

    <div style="margin-bottom:10px;">
        <label for="Name">Márka</label><br />
        <input type="text" id="Name" name="Name" value="@Model.Name" style="width:300px;" />
    </div>

    <div style="margin-bottom:10px;">
        <label for="Type">Típus</label><br />
        <input type="text" id="Type" name="Type" value="@Model.Type" style="width:300px;" />
    </div>

    <button type="submit" style="padding:8px 14px; margin-right:10px;">Mentés</button>
    <button type="button" onclick="window.location.href='/Vehicles'" style="padding:8px 14px;">Vissza a listához</button>
</form>