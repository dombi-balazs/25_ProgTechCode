@model JarmuMvcApp.Models.Vehicle

@{
    ViewData["Title"] = "Részletek";
}

<div style="display: flex; justify-content: center;">
    <fluent-card style="width: 100%; max-width: 500px; margin-top: 20px;">
        
        <h2 style="margin-bottom: 20px;">Jármű adatai</h2>

        <div style="display: flex; flex-direction: column; gap: 15px;">
            
            <fluent-text-field value="@Model.LicensePlate" readonly style="width: 100%;">
                Rendszám
            </fluent-text-field>

            <fluent-text-field value="@Model.Owner" readonly style="width: 100%;">
                Tulajdonos
            </fluent-text-field>

            <fluent-text-field value="@Model.Name" readonly style="width: 100%;">
                Márka / Név
            </fluent-text-field>

            <fluent-text-field value="@Model.Type" readonly style="width: 100%;">
                Típus
            </fluent-text-field>

        </div>

        <div style="margin-top: 25px; display: flex; justify-content: flex-end; gap: 10px;">
            <fluent-button appearance="neutral" onclick="window.location.href='/Vehicles'">
                Vissza a listához
            </fluent-button>

            <fluent-button appearance="accent" onclick="window.location.href='/Vehicles/Edit/@Model.Id'">
                Szerkesztés
            </fluent-button>
        </div>

    </fluent-card>
</div>